{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "调试NPcap程序",      // 调试配置名称
            "type": "cppdbg",           // C++调试
            "request": "launch",        // 启动调试
            "program": "${workspaceFolder}/bin/main.exe",  // 调试的程序
            "args": [],                 // 命令行参数
            "stopAtEntry": false,       // 不在入口点停止
            "cwd": "${workspaceFolder}", // 工作目录
            "environment": [],          // 环境变量
            "externalConsole": true,    // 使用外部控制台（重要！）
            "MIMode": "gdb",           // 使用GDB调试器
            "preLaunchTask": "build-npcap"  // 调试前先执行构建任务
        }
    ]
}